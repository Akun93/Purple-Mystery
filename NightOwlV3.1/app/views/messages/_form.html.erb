<%= simple_form_for @message do |f| %>
	<%= f.input :title, label: "Group Title" %>
	<%= f.input :location, label: "Location" %>
	<%= f.input :description, label: "Description" %>
	
	
	<% if request.path == new_message_path %>
		<%= f.submit "Create Group"%>
	<% else %>
		<%= f.submit "Update Group"%>
	<% end %>


	
<% end %>

